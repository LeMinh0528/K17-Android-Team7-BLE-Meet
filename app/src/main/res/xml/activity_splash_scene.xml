<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1500">
       <KeyFrameSet>
           <KeyAttribute
               motion:motionTarget="@+id/icon_img"
               motion:framePosition="20"
               android:scaleX="0.7"
               android:scaleY="0.7" />
           <KeyAttribute
               motion:motionTarget="@+id/icon_img"
               motion:framePosition="50"
               android:scaleX="0.7"
               android:scaleY="0.7" />
           <KeyAttribute
               motion:motionTarget="@+id/icon_img"
               motion:framePosition="100"
               android:scaleX="3"
               android:scaleY="3" />
           <KeyAttribute
               motion:motionTarget="@+id/icon_img"
               motion:framePosition="35"
               android:scaleX="1.5"
               android:scaleY="1.5" />
           <KeyAttribute
               motion:motionTarget="@+id/circle_center"
               motion:framePosition="0"
               android:scaleX="0.01"
               android:scaleY="0.01" />
           <KeyAttribute
               motion:motionTarget="@+id/circle_center"
               motion:framePosition="0"
               android:scaleX="0.01"
               android:scaleY="0.01" />
           <KeyAttribute
               motion:motionTarget="@+id/circle_center"
               motion:framePosition="50"
               android:scaleX="0.01"
               android:scaleY="0.01" />
           <KeyAttribute
               motion:motionTarget="@+id/circle_center"
               motion:framePosition="100"
               android:scaleX="5"
               android:scaleY="5" />
       </KeyFrameSet>
        <OnClick motion:targetId="@+id/icon_img" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
    </ConstraintSet>
</MotionScene>