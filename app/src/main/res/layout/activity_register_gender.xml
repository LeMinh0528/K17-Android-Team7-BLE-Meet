<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegisterImformation.RegisterGenderActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingHorizontal="15dp"
                android:paddingVertical="10dp">
                <Button
                    android:id="@+id/button_back"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/left_arrow"
                    android:paddingTop="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>
    <RelativeLayout
        android:layout_below="@+id/appBarLayout"
        android:layout_width="match_parent"

        android:layout_height="match_parent">
        <ScrollView
            android:layout_above="@+id/btn_continue"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:paddingHorizontal="5dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="I'm a"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:paddingVertical="10dp"/>
                <LinearLayout
                    android:layout_marginVertical="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/gender_man"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:layout_marginHorizontal="7dp"
                        android:background="@drawable/bg_normal"
                        android:gravity="center">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="Man"
                            android:textStyle="bold"/>
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_marginVertical="7dp"
                            android:layout_height="100dp"
                            android:src="@drawable/ic_mandefault"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/gender_woman"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="7dp"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:gravity="center"
                        android:background="@drawable/bg_normal"
                        android:clickable="true">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="Woman"
                            android:textStyle="bold"/>
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginVertical="7dp"
                            android:src="@drawable/ic_womandefault"/>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="I'm interested in"
                    android:layout_marginTop="40dp"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:paddingVertical="10dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="15dp">
                    <LinearLayout
                        android:id="@+id/inter_man"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="7dp"
                        android:background="@drawable/bg_normal"
                        android:gravity="center">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="Man"
                            android:textStyle="bold"/>
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_marginVertical="7dp"
                            android:layout_height="100dp"
                            android:src="@drawable/ic_mandefault"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/inter_woman"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="7dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/bg_normal"
                        android:clickable="true">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="Woman"
                            android:textStyle="bold"/>
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginVertical="7dp"
                            android:src="@drawable/ic_womandefault"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/inter_both"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="7dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/bg_normal"
                        android:clickable="true">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="Both"
                            android:textStyle="bold"/>
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginVertical="7dp"
                            android:src="@drawable/ic_both"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:id="@+id/btn_continue"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ripble_button"
            android:layout_alignParentBottom="true"
            android:layout_marginVertical="8dp"
            android:gravity="center"
            android:textColor="#F4F4F4"
            android:paddingVertical="12dp"
            android:layout_marginHorizontal="25dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Continute"
                android:textStyle="bold"
                android:textColor="@color/colorwhite"
                android:textSize="18dp" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>