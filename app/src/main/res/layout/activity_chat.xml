<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".chat.ChatActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_alignParentTop="true"
        tools:ignore="MissingConstraints">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/ic_baseline_arrow_back_colorblack"
                        android:paddingTop="10dp" />
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="60dp"
                        android:layout_marginLeft="15dp"
                        android:paddingVertical="10dp"
                        android:gravity="center_horizontal"
                        android:layout_marginEnd="60dp"
                        android:layout_toStartOf="@+id/cim_avatar"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Tran Thi Nhu Nguyet"
                        android:textColor="@color/black"
                        android:textSize="15dp" />
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/cim_avatar"
                        android:layout_marginLeft="10dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:civ_border_color="#9456F8E9"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="15dp"
                        app:civ_border_width="1dp"
                        android:src="@drawable/avatar_default"/>
                </RelativeLayout>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:id="@+id/linelayout_boxchat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:paddingVertical="5dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_photo_camera_24"/>
        </LinearLayout>
        <EditText
            android:layout_gravity="center"
            android:background="@drawable/shape_edittext_chat"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingVertical="12dp"
            android:paddingHorizontal="15dp"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:hint="Enter message"
            ></EditText>
        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:paddingVertical="5dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_send_24"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/linelayout_boxchat"
        android:background="@color/colorBreakLine"/>
</RelativeLayout>